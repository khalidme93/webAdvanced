
<div id="signin">

    <div class="bannerBox column is-half is-offset-one-quarter">
        <h1 class="title is-1 bannerText" ><b>SIGN IN</b></h1>
    </div>
    <div class="box signInBox column is-half is-offset-one-quarter">
        <form id="signInForm" action="/accounts/sign-in" method="POST" style="margin: auto;">
            <div id="signinErrorsField" class="errorText">
                {{#each errors}}
                    <p>{{this}}</p>
                {{/each}}
            </div>
            <div style="max-width:200px; margin: auto; margin-top: 20px">
                <label class="label">Username</label>
                <input class="input" type="text" name="username">
                <p class="pLoginError"></p>
                <br>
                <label class="label">Password</label>
                <input class="input" type="password" name="password">
                <p class="pLoginError"></p>

                <input class="button is-primary is-medium is-fullwidth" type="submit" value="Login" style="margin-bottom:10px; margin-top:10px;">
                <br>
            </div>
        </form>
    </div>
    <br><br>
</div>
